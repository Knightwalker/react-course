{
    "plugins": [
        "plugins/markdown"
    ],
    "source": {
        "include": [
            "src"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(node_modules/|docs)"
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
}
