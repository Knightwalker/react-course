{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        
        /* Bundler mode */
        "jsx": "react-jsx",
        
        /* Linting */
        "strict": false, // put to true, once we migrate to TS
        "strictNullChecks": true, // remove, once strict is enabled
        "forceConsistentCasingInFileNames": true,
    }
}